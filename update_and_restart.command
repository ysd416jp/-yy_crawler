#!/bin/bash
# =============================================
#  ダブルクリックで最新コードに更新＆再起動
# =============================================

# このスクリプトがあるフォルダに移動
cd "$(dirname "$0")"

echo "========================================="
echo "  最新コードを取得して再起動します..."
echo "========================================="
echo ""

# 今動いてるlocal_tts.pyを止める
pkill -f "python.*local_tts.py" 2>/dev/null
sleep 1

# 最新コードを取得
git pull origin claude/mobile-tts-system-JEkXZ

echo ""
echo "========================================="
echo "  local_tts.py を起動します..."
echo "========================================="
echo ""

# 起動
python3 local_tts.py

# ウィンドウを開いたままにする
read -p "Enterキーで閉じます..."
